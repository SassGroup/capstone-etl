<configuration>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder> <pattern>%C %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg uuid=%X{UUID} applicationId=%X{applicationId} %n </pattern> </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="Console" />
    </root>
</configuration>
